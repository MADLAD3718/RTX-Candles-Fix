{
	"format_version": "1.19.50",
	"minecraft:block": {
		"description": {
			"identifier": "rtxfixes:candle_cake",
			"properties": {
				"rtxfixes:lit": [
					false,
					true
				]
			},
			"menu_category": {
				"is_hidden_in_commands": true,
				"category": "none"
			}
		},
		"components": {
			"minecraft:geometry": "geometry.candle_cake",
			"minecraft:material_instances": {
				"*": {
					"texture": "candle",
					"render_method": "opaque"
				},
				"side": {
					"texture": "cake_side",
					"render_method": "opaque"
				},
				"bottom": {
					"texture": "cake_bottom",
					"render_method": "opaque"
				},
				"top": {
					"texture": "cake_top",
					"render_method": "opaque"
				}
			},
			"minecraft:light_dampening": 0,
			"minecraft:selection_box": {
				"size": [
					14,
					8,
					14
				],
				"origin": [
					-7,
					0,
					-7
				]
			},
			"minecraft:collision_box": {
				"size": [
					14,
					8,
					14
				],
				"origin": [
					-7,
					0,
					-7
				]
			},
			"minecraft:loot": "loot_tables/candle/1.json",
			"tag:rtx_candle_cake": {},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0.5
			},
			"minecraft:on_interact": {
				"condition": "(query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:flint_and_steel') && !query.block_property('rtxfixes:lit')) || !query.is_item_equipped('main_hand')",
				"event": "interact"
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('rtxfixes:lit')",
				"components": {
					"minecraft:queued_ticking": {
						"looping": true,
						"interval_range": [
							40,
							100
						],
						"on_tick": {
							"event": "candle_particle"
						}
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "candle_lit",
							"render_method": "opaque"
						},
						"side": {
							"texture": "cake_side",
							"render_method": "opaque"
						},
						"bottom": {
							"texture": "cake_bottom",
							"render_method": "opaque"
						},
						"top": {
							"texture": "cake_top",
							"render_method": "opaque"
						}
					},
					"minecraft:light_emission": 3
				}
			}
		],
		"events": {
			"interact": {
				"sequence": [
					{
						"condition": "query.is_item_name_any('slot.weapon.mainhand', 0, 'minecraft:flint_and_steel') && !query.block_property('rtxfixes:lit')",
						"damage": {
							"type": "durability",
							"amount": 1,
							"target": "item"
						},
						"trigger": {
							"event": "candle_light"
						}
					},
					{
						"condition": "!query.is_item_equipped('main_hand') && query.block_property('rtxfixes:lit')",
						"trigger": {
							"event": "candle_extinguish"
						}
					}
				]
			},
			"candle_light": {
				"set_block_property": {
					"rtxfixes:lit": true
				},
				"trigger": {
					"event": "candle_particle"
				}
			},
			"candle_particle": {
				"run_command": {
					"command": [
						"particle minecraft:candle_flame_particle ~ ~0.5 ~"
					]
				}
			},
			"candle_extinguish": {
				"trigger": {
					"event": "candle_particle_extinguish"
				}
			},
			"candle_particle_extinguish": {
				"run_command": {
					"command": [
						"particle minecraft:basic_smoke_particle ~ ~0.5 ~"
					]
				}
			}
		}
	}
}